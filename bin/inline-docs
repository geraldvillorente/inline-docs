#!/usr/bin/env node

/*

Command line interface
====

*/

var minimist = require('minimist');
var path = require('path');

var argv = minimist(process.argv.slice(2));
var opts = {
    dir: path.resolve(argv._[0] || '.'),

    //> If no template is specified we'll use the default in [[Html Template]].
    template: path.resolve(__dirname + '/../template/tpl.html')
};

if (argv.template) {
    //> Template can be disabled if we just want to render the docs with no wrapper.
    if (argv.template === 'f' || argv.template === 'false') {
        opts.template = false;
    }
    //> Use a custom template
    else {
        opts.template = path.resolve(argv.template);
    }
}

require('..')(opts);
